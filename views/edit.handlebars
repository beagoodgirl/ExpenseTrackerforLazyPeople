<!-- is-valid is-invalid-->
<div class="form-container container">
    {{> error}}
    <form action="/entries/{{record._id}}?_method=PUT" method="POST"  novalidate>
        <div class="form-group has-success has-danger">
            <label class="form-label" for="name">支出名稱</label>
            <input type="text" value="{{record.name}}" placeholder="ex:午餐" class="form-control" name="name" id="name" required>
            <div class="valid-feedback">您做得很棒！</div>
            <div class="invalid-feedback">支出名稱為必填欄位</div>
        </div>
        <div class="form-group has-success has-danger">
            <label class="form-label" for="date">日期(今天以前)</label>
            <input type="date" value="{{record.date}}" placeholder="" class="form-control" name="date" id="date" required>
            <div class="valid-feedback">您做得很棒！</div>
            <div class="invalid-feedback">日期為必填欄位, 且不可超過今天</div>
        </div>
        <div class="form-group">
            <label for="categoryID" class="form-label">類別</label>
            <select class="form-select" id="categoryID" name="categoryID" required>
                <option value="" disabled selected hidden>請選擇支出類別</option>
                {{#each categories}}
                    <option value="{{this._id}}" {{#if (selectedInEdit this._id ../record.categoryID)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
            <div class="valid-feedback">您做得很棒！</div>
            <div class="invalid-feedback">請選擇支出類別</div>
        </div>
        <div class="form-group has-success has-danger">
            <label class="form-label" for="amount">金額</label>
            <input type="number" value="{{record.amount}}" placeholder="$0" class="form-control" name="amount" id="amount" inputmode="numeric" required>
            <div class="valid-feedback">您做得很棒</div>
            <div class="invalid-feedback">金額為必填欄位，且須填入數字</div>
        </div>
        <img src="{{record.image}}" width="400">
        <div class="big-btn-div d-grid gap-2">
            <button type="submit" class="btn btn-primary" id="submit-btn">修改支出</button>
        </div>
    </form>
</div>